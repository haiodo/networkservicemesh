FROM networkservicemesh/builder:latest as build
ENV GOCACHE=/go-cache
RUN go env GOCACHE
RUN CGO_ENABLED=0 GOOS=linux go build  -i -ldflags '-extldflags "-static"' -o /go/bin/nsmd ./controlplane/cmd/nsmd/nsmd.go

FROM alpine as runtime
COPY --from=build /go/bin/nsmd /bin/nsmd
ENTRYPOINT ["/bin/nsmd"]
