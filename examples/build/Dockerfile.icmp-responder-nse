FROM networkservicemesh/builder:latest as build

RUN CGO_ENABLED=0 GOOS=linux go build -i -ldflags '-extldflags "-static"' -o /go/bin/icmp-responder-nse ./examples/cmd/icmp-responder-nse
FROM alpine as runtime
COPY --from=build /go/bin/icmp-responder-nse /bin/icmp-responder-nse
ENTRYPOINT ["/bin/icmp-responder-nse"]
